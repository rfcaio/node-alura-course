<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Books</title>
  <link rel="stylesheet" href="/static/style.css">
</head>
<body>
  <h1>List of books</h1>

  <nav>
    <ul>
      <li>
        <a href="/">Home</a>
      </li>
      <li>
        <a href="/book/create">Create new book</a>
      </li>
    </ul>
  </nav>

  <table border="1">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Author</th>
        <th>Price</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <tr for (book in data.books)>
        <td>${book.id}</td>
        <td>
          <a href="/book/update/${book.id}">${book.title}</a>
        </td>
        <td>${book.author}</td>
        <td>$ ${book.price}</td>
        <td>
          <a href="/book/delete/${book.id}">Remove</a>
        </td>
      </tr>
    </tbody>
  </table>
</body>
</html>
